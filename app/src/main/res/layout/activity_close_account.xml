<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin_horizontal"
    android:layout_height="match_parent"
    tools:context=".ui.activity.CloseAccountActivity">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/close_account"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/_16ssp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_main"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/poppins_light"
        android:text="Warning:  Lorem ipsum dolor sit amet consectetur. Sem turpis sodales mattis iaculis vulputate. Ut eget amet quis turpis aliquet nunc duis. Consectetur at tincidunt vestibulum porttitor faucibus."
        android:textColor="@color/primary_color1"
        android:textSize="@dimen/_11ssp" />

    <TextView
        android:id="@+id/txtCloseAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtWarning"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/poppins_light"
        android:text="Lorem ipsum dolor sit amet consectetur. Sem turpis sodales mattis iaculis vulputate. Ut eget amet quis turpis aliquet nunc duis. Consectetur at tincidunt vestibulum porttitor faucibus."
        android:textColor="@color/primary_color1"
        android:textSize="@dimen/_11ssp" />

    <EditText
        android:id="@+id/etReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@drawable/rbxcounter_input_field"
        android:fontFamily="@font/poppins_light"
        android:hint="@string/choose_reasion"
        android:drawableEnd="@drawable/ic_expand"
        android:layout_below="@id/txtCloseAccount"
        android:inputType="number"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:textColor="#727272"
        android:textSize="@dimen/_12ssp" />


    <TextView
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="@string/close"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp" />

</RelativeLayout>