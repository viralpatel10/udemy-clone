<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        android:background="@drawable/search_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_course_ongoing"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/image_my_course"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCourseTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/course_title"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/primary_color"/>

                <TextView
                    android:id="@+id/txtCourseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/course_name"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/primary_color1"/>

                <TextView
                    android:id="@+id/txtCourseDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/course_duration"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/_11ssp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/courseProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:progress="50"
                        android:layout_gravity="center"
                        android:max="100"
                        android:progressTint="@color/primary_color"
                        android:backgroundTint="@color/primary_color1" />

                    <TextView
                        android:id="@+id/txtProgressCourse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/primary_color1"/>

                    <TextView
                        android:id="@+id/txtTotalCourse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/30"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/primary_color"
                        android:textSize="@dimen/_11ssp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>